{
  "files": ["src/index.ts"],
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "strict": true,
    /* other options... */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
